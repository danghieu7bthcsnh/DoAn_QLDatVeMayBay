@model QLDatVeMayBay.ViewModels.XacNhanQuenMatKhauViewModel
@{
    ViewData["Title"] = "Xác nhận mã OTP";
}

<h2>Xác nhận mã OTP</h2>

<form asp-action="XacNhanQuenMatKhau" method="post">
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label>Mã xác nhận đã gửi về email</label>
        <input asp-for="MaXacNhan" class="form-control" />
        <span asp-validation-for="MaXacNhan" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Xác nhận</button>
    <!-- Nút gửi lại mã -->
    <button formaction="/TaiKhoan/GuiLaiMa" formmethod="post" class="btn btn-secondary mt-2 ms-2">Gửi lại mã</button>

    <!-- Nút quay lại -->
    <button type="button" onclick="history.back()" class="btn btn-outline-secondary mt-2 ms-2">← Quay lại</button>
</form>
