@model QLDatVeMayBay.Models.ChuyenBay
@{
    ViewData["Title"] = "Xác nhận xóa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3 text-danger">🗑 Xác nhận xóa chuyến bay</h2>
<hr />

<div>
    <p>Bạn có chắc chắn muốn xóa chuyến bay từ <strong>@Model.SanBayDiInfo?.TenSanBay</strong> đến <strong>@Model.SanBayDenInfo?.TenSanBay</strong> không?</p>
    <dl class="row">
        <dt class="col-sm-3">Giờ cất cánh:</dt>
        <dd class="col-sm-9">@Model.GioCatCanh</dd>

        <dt class="col-sm-3">Giờ hạ cánh:</dt>
        <dd class="col-sm-9">@Model.GioHaCanh</dd>

        <dt class="col-sm-3">Giá vé:</dt>
        <dd class="col-sm-9">@Model.GiaVe.ToString("N0")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IDChuyenBay" />
        <button type="submit" class="btn btn-danger">🗑 Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
    </form>
</div>