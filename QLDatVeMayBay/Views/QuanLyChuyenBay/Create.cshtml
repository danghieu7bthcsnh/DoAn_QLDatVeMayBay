@model QLDatVeMayBay.Models.ChuyenBay
@{
    ViewData["Title"] = Model.IDChuyenBay == 0 ? "Thêm chuyến bay" : "Cập nhật chuyến bay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .flight-form-container {
        max-width: 600px;
        margin: 40px auto 60px auto;
        background: #ffffff;
        padding: 30px 35px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .flight-form-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #0d6efd;
            font-weight: 700;
            font-size: 2rem;
        }

    form label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 6px;
        display: block;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1.8px solid #ced4da;
        padding: 10px 15px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
            outline: none;
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 4px;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        border-radius: 30px;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        color: white;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            box-shadow: 0 6px 20px rgba(13, 110, 253, 0.5);
        }

    .btn-secondary {
        border-radius: 30px;
        padding: 12px 25px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        color: #6c757d;
        background-color: #f8f9fa;
        border: 1.5px solid #ced4da;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-left: 15px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #e2e6ea;
            color: #495057;
            text-decoration: none;
        }
</style>

<div class="flight-form-container">
    <h2>
        @(Model.IDChuyenBay == 0 ? "➕ Thêm chuyến bay" : "✏️ Cập nhật chuyến bay")
    </h2>

    <form asp-action="@(Model.IDChuyenBay == 0 ? "Create" : "Edit")" method="post" novalidate>
        @if (Model.IDChuyenBay != 0)
        {
            <input type="hidden" asp-for="IDChuyenBay" />
        }

        <div class="mb-3">
            <label asp-for="IDMayBay">Máy bay</label>
            <select asp-for="IDMayBay" class="form-select" asp-items="ViewBag.MayBayList">
                <option value="">-- Chọn hãng máy bay --</option>
            </select>
            <span class="validation-message" asp-validation-for="IDMayBay"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SanBayDi">Sân bay đi</label>
            <select asp-for="SanBayDi" class="form-select" asp-items="ViewBag.SanBayList">
                <option value="">-- Chọn sân bay đi --</option>
            </select>
            <span class="validation-message" asp-validation-for="SanBayDi"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SanBayDen">Sân bay đến</label>
            <select asp-for="SanBayDen" class="form-select" asp-items="ViewBag.SanBayList">
                <option value="">-- Chọn sân bay đến --</option>
            </select>
            <span class="validation-message" asp-validation-for="SanBayDen"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GioCatCanh">Giờ cất cánh</label>
            <input asp-for="GioCatCanh" type="datetime-local" class="form-control" />
            <span class="validation-message" asp-validation-for="GioCatCanh"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GioHaCanh">Giờ hạ cánh</label>
            <input asp-for="GioHaCanh" type="datetime-local" class="form-control" />
            <span class="validation-message" asp-validation-for="GioHaCanh"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GiaVe">Giá vé (VND)</label>
            <input asp-for="GiaVe" type="number" min="1" class="form-control" />
            <span class="validation-message" asp-validation-for="GiaVe"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TinhTrang">Tình trạng</label>
            <select asp-for="TinhTrang" class="form-select">
                <option value="">-- Chọn tình trạng --</option>
                <option value="Đang bay">Đang bay</option>
                <option value="Hoãn">Hoãn</option>
                <option value="Hủy">Hủy</option>
            </select>
            <span class="validation-message" asp-validation-for="TinhTrang"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Lưu
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
