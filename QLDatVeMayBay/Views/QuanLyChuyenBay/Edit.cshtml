@model QLDatVeMayBay.Models.ChuyenBay

@{
    ViewData["Title"] = "Chỉnh sửa chuyến bay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3 mb-4 text-primary fw-bold">✏️ Cập nhật thông tin chuyến bay</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger rounded-3 shadow-sm">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>⚠️ @error.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Edit" method="post" class="row g-3">
    @Html.HiddenFor(model => model.IDChuyenBay)

    <div class="col-md-4">
