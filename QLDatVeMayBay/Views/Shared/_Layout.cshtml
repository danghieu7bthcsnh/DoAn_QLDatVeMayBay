<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLDatVeMayBay</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLDatVeMayBay.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QLDatVeMayBay</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-controller="TaiKhoan" asp-action="DangNhap" class="btn btn-outline-primary">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="TaiKhoan" asp-action="DangKy" class="btn btn-outline-primary">Đăng ký</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown">
                                Tài khoản
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                <li><a class="dropdown-item" asp-action="ChinhSuaHoSo" asp-controller="TaiKhoan">Chỉnh sửa hồ sơ</a></li>
                                <li><a class="dropdown-item" asp-action="TheCuaToi" asp-controller="TaiKhoan">Thẻ của tôi</a></li>
                                <li><a class="dropdown-item" asp-action="GiaoDich" asp-controller="TaiKhoan">Danh sách giao dịch</a></li>
                                <li><a class="dropdown-item" asp-action="HoanTien" asp-controller="TaiKhoan">Hoàn tiền</a></li>
                                <li><a class="dropdown-item" asp-action="ChuyenBayCuaToi" asp-controller="TaiKhoan">Chuyến bay của tôi</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="DangXuat" asp-controller="TaiKhoan">Đăng xuất</a></li>
                            </ul>
                        </li>

                        

                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QLDatVeMayBay - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
