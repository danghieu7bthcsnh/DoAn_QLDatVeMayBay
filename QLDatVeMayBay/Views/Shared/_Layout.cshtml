@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var session = HttpContextAccessor.HttpContext.Session;
    var tenDangNhap = session.GetString("TenDangNhap");
    var vaiTro = session.GetString("VaiTro");
    var isAdmin = vaiTro == "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QLĐặtVé Máy Bay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: white;
            border-bottom: 1px solid #e0e0e0;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .navbar-brand {
            font-weight: 600;
            color: #1a73e8 !important;
            font-size: 1.4rem;
            letter-spacing: -0.5px;
        }

        .navbar-nav .nav-link {
            color: #3c4043;
            font-weight: 500;
            font-size: 1rem;
            margin: 0 0.75rem;
            transition: color 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #1a73e8;
                text-decoration: none;
            }

        .btn-outline-primary, .btn-outline-secondary, .btn-outline-danger {
            padding: 6px 14px;
            font-size: 0.95rem;
            border-radius: 4px;
        }

            .btn-outline-primary:hover {
                background-color: #1a73e8;
                color: #fff;
            }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: #fff;
            }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: #fff;
            }

        .greeting {
            font-size: 0.9rem;
            color: #5f6368;
            margin-right: 1rem;
        }

        footer {
            background-color: #f1f3f4;
            padding: 1rem 0;
            margin-top: 60px;
            font-size: 0.9rem;
        }

            footer a {
                color: #1a73e8;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* ✅ Dropdown Tài khoản */
        .user-menu .dropdown-toggle {
            font-weight: 500;
            color: #333;
            cursor: pointer;
        }

        .user-menu img {
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #dee2e6;
        }

        .dropdown-menu.animated-dropdown {
            border-radius: 10px;
            padding: 10px 0;
            animation: fadeInDown 0.2s ease-in-out;
        }

        .dropdown-item {
            padding: 10px 20px;
            transition: background-color 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: #f0f2f5;
            }

            .dropdown-item i {
                width: 20px;
            }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">QLĐặtVé</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (!string.IsNullOrEmpty(tenDangNhap))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DatVe" asp-action="TimKiem">Đặt vé</a>
                            </li>
                            @if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Dashboard">Quản trị</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(tenDangNhap))
                        {
                            <li class="nav-item dropdown user-menu">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <img src="/images/user-avatar.png" width="32" height="32" class="me-2" alt="Avatar" />
                                    <span>@tenDangNhap</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow animated-dropdown">
                                    <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="CaNhan"><i class="bi bi-person me-2 text-primary"></i> Chỉnh sửa hồ sơ</a></li>
                                    <li><a class="dropdown-item" asp-controller="TheThanhToan" asp-action="Index"><i class="bi bi-credit-card me-2 text-primary"></i> Thẻ của tôi</a></li>
                                    <li> <a class="dropdown-item" asp-controller="GiaoDich" asp-action="Index"><i class="bi bi-receipt me-2 text-primary"></i> Danh sách giao dịch</a></li>
                                    <li><a class="dropdown-item" asp-controller="HoanTien" asp-action="Index"><i class="bi bi-cash-coin me-2 text-primary"></i> Hoàn tiền</a></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="VeMayBay" asp-action="ChuyenBayCuaToi">
                                            <i class="bi bi-airplane-engines me-2 text-primary"></i> Chuyến bay của tôi
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="TaiKhoan" asp-action="DangXuat" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-controller="TaiKhoan" asp-action="DangKy">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-center text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Hệ thống QLĐặtVé Máy Bay ✈ |
            <a asp-controller="Home" asp-action="Privacy">Chính sách & Điều khoản</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @section Scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

        <partial name="_ValidationScriptsPartial" />
    }


</body>
</html>
