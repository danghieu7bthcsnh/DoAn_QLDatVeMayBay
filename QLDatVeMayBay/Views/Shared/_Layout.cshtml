@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var session = HttpContextAccessor.HttpContext.Session;
    var tenDangNhap = session.GetString("TenDangNhap");
    var vaiTro = session.GetString("VaiTro");
    var isAdmin = vaiTro == "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLDatVeMayBay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLDatVeMayBay.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">✈ QLĐặtVé</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Trang Chủ -->
                        <li class="nav-item me-3">
                             <a class="nav-link" asp-controller="Home" asp-action="TrangChu">Trang Chủ</a>
                           
                        </li>

                       <!-- Dropdown Hỗ Trợ -->
                       <li class="nav-item dropdown me-3">
                          <a class="nav-link dropdown-toggle" href="#" id="hoTroDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hỗ Trợ
                          </a>
                         <ul class="dropdown-menu shadow border-0 rounded-4 p-3" aria-labelledby="hoTroDropdown" style="width: 280px;">
                           <li class="d-flex align-items-center mb-3">
                             <i class="bi bi-question-circle fs-3 text-secondary me-3"></i>
                             <a class="text-dark text-decoration-none fw-semibold fs-5" asp-controller="Home" asp-action="TroGiup">Trợ giúp</a>
                           </li>
                          <li class="d-flex align-items-center mb-3">
                             <i class="bi bi-chat-dots fs-3 text-secondary me-3"></i>
                             <a class="text-dark text-decoration-none fw-semibold fs-5" asp-controller="Home" asp-action="LienHe">Liên hệ chúng tôi</a>
                          </li>
                         <li class="d-flex align-items-center">
                              <i class="bi bi-mailbox fs-3 text-secondary me-3"></i>
                              <a class="text-dark text-decoration-none fw-semibold fs-5" asp-controller="Home" asp-action="HopThu">Hộp thư của tôi</a>
                                 </li>
                            </ul>
                        </li>
                        @if (string.IsNullOrEmpty(tenDangNhap))
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-controller="TaiKhoan" asp-action="DangKy">Đăng ký</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DatVe" asp-action="TimChuyenBay">Đặt vé</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="TaiKhoan" asp-action="CaNhan">👤 Tài khoản</a>
                            </li>

                            @if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Dashboard">🛠️ Quản trị</a>
                                </li>
                            }
                            <li class="nav-item ms-auto">
                                <span class="navbar-text me-2">Xin chào, <strong>@tenDangNhap</strong></span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="TaiKhoan" asp-action="DangXuat" method="post">
                                    <button type="submit" class="btn btn-outline-danger">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QLDatVeMayBay - <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Tạm thay thế để test dropdown hoạt động -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-whatever" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
