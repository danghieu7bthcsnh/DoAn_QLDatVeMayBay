@model QLDatVeMayBay.AdminViewModels.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<style>
    .change-password-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .change-password-header {
        text-align: center;
        margin-bottom: 2rem;
        color: #2c7a7b;
        font-weight: 700;
    }

    label {
        font-weight: 600;
        color: #4a5568;
    }

    input {
        border-radius: 8px;
        border: 1px solid #cbd5e0;
        transition: border-color 0.3s ease;
    }

        input:focus {
            border-color: #2c7a7b;
            box-shadow: 0 0 5px rgba(44, 122, 123, 0.5);
            outline: none;
        }

    .btn-primary {
        background-color: #2c7a7b;
        border-color: #2c7a7b;
        font-weight: 600;
        padding: 0.6rem 2rem;
        border-radius: 50px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #285e5e;
            border-color: #285e5e;
        }

    .validation-message {
        color: #e53e3e;
        font-size: 0.9rem;
    }

    .alert-success {
        border-radius: 12px;
        font-weight: 600;
        background-color: #c6f6d5;
        color: #22543d;
        border: 1px solid #9ae6b4;
        margin-bottom: 1.5rem;
        padding: 1rem 1.5rem;
        text-align: center;
    }
</style>

<div class="change-password-container shadow-sm">
    <h2 class="change-password-header">Đổi mật khẩu</h2>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-success">@ViewBag.ThongBao</div>
    }

    <form method="post" asp-action="DoiMatKhau" novalidate>
        <div class="mb-4">
            <label for="MatKhauCu" class="form-label">Mật khẩu cũ <span class="text-danger">*</span></label>
            <input type="password" id="MatKhauCu" class="form-control" asp-for="MatKhauCu" placeholder="Nhập mật khẩu hiện tại" />
            <span asp-validation-for="MatKhauCu" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label for="MatKhauMoi" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
            <input type="password" id="MatKhauMoi" class="form-control" asp-for="MatKhauMoi" placeholder="Nhập mật khẩu mới" />
            <span asp-validation-for="MatKhauMoi" class="validation-message"></span>
        </div>

        <div class="mb-4">
            <label for="XacNhanMatKhau" class="form-label">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
            <input type="password" id="XacNhanMatKhau" class="form-control" asp-for="XacNhanMatKhau" placeholder="Nhập lại mật khẩu mới" />
            <span asp-validation-for="XacNhanMatKhau" class="validation-message"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-5">Cập nhật mật khẩu</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
