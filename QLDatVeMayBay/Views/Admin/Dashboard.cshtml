                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.NguoiDungMoi != null)
                    {
                        int stt = 1;
                        foreach (var user in ViewBag.NguoiDungMoi)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@user.TenDangNhap</td>
                                <td>@user.HoTen</td>
                                <td>@user.Email</td>
                                <td>@user.NgayTao?.ToString("dd/MM/yyyy")</td>
                            </tr>
                            stt++;
                        }
                    }
