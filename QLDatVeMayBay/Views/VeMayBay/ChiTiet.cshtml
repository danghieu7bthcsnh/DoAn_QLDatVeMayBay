@model QLDatVeMayBay.Models.VeMayBay
@{
    ViewData["Title"] = "Chi tiết vé máy bay";
    Layout = "_AdminLayout"; // Hoặc layout chung nếu có
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container my-5">
    <div class="card shadow-lg rounded-4 border-0 p-4" style="max-width: 700px; margin: auto; background-image: url('/images/ticket-bg.png'); background-size: cover;">
        <div class="card-body bg-white bg-opacity-75 rounded-4">

            <div class="text-center mb-4">
                <h3 class="text-primary fw-bold">🎫 Vé Máy Bay</h3>
                <p class="text-muted">Mã vé: <strong>#@Model.IDVe</strong></p>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">👤 Hành khách:</label>
                    <div>@Model.NguoiDung?.HoTen</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">✈️ Chuyến bay:</label>
                    <div>@Model.ChuyenBay?.IDChuyenBay - @Model.ChuyenBay?.MayBay?.TenHangHK</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">🪑 Ghế:</label>
                    <div>@Model.Ghe?.HangGhe</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">📅 Thời gian đặt:</label>
                    <div>@Model.ThoiGianDat.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">📍 Từ:</label>
                    <div>@Model.ChuyenBay?.SanBayDiInfo?.TenSanBay</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">📍 Đến:</label>
                    <div>@Model.ChuyenBay?.SanBayDenInfo?.TenSanBay</div>
                </div>
                <div class="col-md-12">
                    <label class="form-label fw-semibold">📌 Trạng thái vé:</label>
                    <span class="badge @(Model.TrangThaiVe == "Đã thanh toán" ? "bg-success" : Model.TrangThaiVe == "Đã huỷ" ? "bg-danger" : "bg-warning text-dark")">
                        @Model.TrangThaiVe
                    </span>
                </div>
            </div>

            <div class="text-center mt-4">
                <h5 class="fw-semibold">🔳 Mã QR</h5>
                <img src="https://api.qrserver.com/v1/create-qr-code/?data=VeID:@Model.IDVe;CB:@Model.ChuyenBay?.IDChuyenBay;Nguoi:@Model.NguoiDung?.HoTen&size=160x160"
                     alt="QR Code" class="rounded p-2 bg-white border shadow-sm" />
                <div class="small text-muted mt-1">Mã QR dùng để check-in</div>
            </div>

            <div class="text-center mt-4">
                <a href="/VeMayBay/Index" class="btn btn-outline-primary me-2">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>

                <a href="/VeMayBay/XacNhanXoa/@Model.IDVe" class="btn btn-outline-danger">
                    <i class="bi bi-trash3"></i> Xoá vé này
                </a>
            </div>
        </div>
    </div>
</div>
